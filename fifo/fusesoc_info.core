CAPI=2:

name: AFRL:buffer:fifo:1.0.0
description: A standard dual clock fifo that mimicks the Xilinx FIFO behavior (v2018.3).

filesets:
  src:
    files:
      - src/fifo.v
      - src/fifo_ctrl.v
      - src/fifo_mem.v
      - src/fifo_pipe.v
    file_type: verilogSource
    depend:
      - AFRL:utility:util_helper:1.0.0
  
  tb:
    files:
      - tb/tb_fifo.v
    file_type: verilogSource
    
  vivado_constr:
    files:
      - constr/util_fifo_constr.xdc
    file_type: xdc
    
targets:
  default:
    filesets: [src]
  
  sim:
    default_tool: icarus
    filesets: [src, tb]
    toplevel: tb_fifo
    
